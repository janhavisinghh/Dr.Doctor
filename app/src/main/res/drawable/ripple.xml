<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grey_font">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_overlay" />
            <corners android:radius="5dp" />
            <stroke android:width="5px" android:color="@color/grey" />

        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/grey_overlay"
                android:startColor="@color/grey_overlay"
                android:type="linear" />
            <corners android:radius="5dp" />
            <stroke android:width="5px" android:color="@color/grey_font" />
        </shape>
    </item>
</ripple>